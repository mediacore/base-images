{
  "builders": [
    {
      "type": "amazon-instance",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami_instance`}}",
      "ssh_username": "ubuntu",
      "user_data_file": "cloud-init",
      "ami_name": "{{user `build_id`}}-instance",
      "account_id": "{{user `aws_account_id`}}",
      "x509_cert_path": "{{user `aws_cert_path`}}",
      "x509_key_path": "{{user `aws_key_path`}}",
      "bundle_destination": "/mnt",
      "bundle_prefix": "{{user `build_id`}}-instance",
      "bundle_vol_command": "sudo -n ec2-bundle-vol -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -e {{.PrivatePath}}/* -d {{.Destination}} -p {{.Prefix}} --include `sudo -n find / -name '*.gpg' -o -name '*.pem' | grep -v '^/mnt\\|^/home\\|^/tmp' | tr '\\n' ','`",
      "bundle_upload_command": "sudo -n ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --retry",
      "s3_bucket": "{{user `aws_s3_bucket`}}"
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami_ebs`}}",
      "ssh_username": "ubuntu",
      "user_data_file": "cloud-init",
      "ami_name": "{{user `build_id`}}-ebs"
    },
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ]
      ],
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-precise64.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "disk_size": 10000,
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "http",
      "iso_checksum": "769474248a3897f4865817446f9a4a53",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.5-server-amd64.iso",
      "shutdown_command": "echo $USER | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "vm_name": "{{user `build_id`}}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `build_id`}}-{{.BuildName}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo $USER | {{ .Vars }} sudo -S -E sh '{{.Path}}'",
      "script": "scripts/vagrant.sh"
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "cookbooks"
      ],
      "install_command": "curl -L https://www.chef.io/chef/install.sh | {{if .Sudo}}sudo {{end}}bash -s -- -P chefdk",
      "json": {
        "base": {
          "hostname": "unassigned-hostname"
        }
      },
      "run_list": [
        "recipe[base]"
      ],
      "override": {
        "virtualbox-iso": {
          "json": {
            "base": {
              "hostname": "base-vagrant"
            }
          }
        }
      }
    },
    {
      "type": "shell",
      "execute_command": "echo $USER | {{ .Vars }} sudo -S -E sh '{{.Path}}'",
      "scripts": [
        "scripts/virtualbox.sh",
        "scripts/amazon.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "variables": {
    "aws_access_key": "",
    "aws_account_id": "",
    "aws_cert_path": "",
    "aws_instance_type": "c3.xlarge",
    "aws_key_path": "",
    "aws_region": "us-east-1",
    "aws_s3_bucket": "",
    "aws_secret_key": "",
    "aws_source_ami_ebs": "ami-0568456c",
    "aws_source_ami_instance": "ami-bd6d40d4",
    "build_id": "base-0.4.2-amd64-20151022",
    "chef_version": "12.5.1"
  }
}
